{
  "manifest_version": 3,
  "name": "我的笔记",
  "version": "1.0",
  "description": "保存和搜索笔记的Chrome扩展",
  "permissions": ["storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  }
} 